<table style="width: 100%; font-size: 14px;">
    <tbody>
    {% for entity in entities %}
        <tr>
            <td style="padding: 5px;">
                <p>
                    <b style="font-size: 18px; line-height: 140%;"><a href="{{ entity.url }}">{{ entity.title }}</a></b><br/>
                    <i>{{ entity.description }}</i>
                </p>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<table style="width: 100%; margin: 10px 0 0 0;">
    <tr>
        <td style="width: 50%; padding: 15px 5px; font-size: 12px; text-align: left;">
            <p>&copy; <a href="{{ base_url(language) }}">{{ t('app@app_name', {}, language) }}</a></p>
        </td>
        <td style="width: 50%; padding: 15px 5px; font-size: 12px; text-align: right;">
            <a href="{{ rule_url('content_digest@unsubscribe', {'lang': language, 'id': subscriber.id}) }}">{{ t('content_digest@unsubscribe', {}, language) }}</a>
        </td>
    </tr>
</table>
